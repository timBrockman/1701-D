{% for item in file.site.categories.root %}
  {% if item == 'index' %}
    <a href="{{item | replace: /\W+/g, '-'}}.html">Profile</a>
  {% else %}
    <a href="{{item | replace: /\W+/g, '-'}}.html">{{item}}</a>
  {% endif %}
{% endfor %}
<amp-accordion>
  <section>
    <header><span class="showmore">+</span><span class="showless">-</span> Projects <span class="showmore">+</span><span class="showless">-</span></header>
    <nav>
      <ul>
{% for item in file.site.categories.projects %}
        <li><a href="{{item | replace: /\W+/g, '-'}}.html">{{item}}</a></li>
{% endfor %}
      </ul>
    </nav>
  </section>
  <section>
    <header><span class="showmore">+</span><span class="showless">-</span> Articles <span class="showmore">+</span><span class="showless">-</span></header>
    <nav>
      <ul>
{% for item in file.site.categories.articles %}
        <li><a href="{{item | replace: /\W+/g, '-' | downcase }}.html">{{item}}</a></li>
{% endfor %}
      </ul>
    </nav>
  </section>
</amp-accordion>